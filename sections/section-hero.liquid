        "name": "Section Hero",
        "settings": [
            {
                "id": "type_hero",
                "type": "radio",
                "label": "Type Section Hero",
                "options": [
                    { "value": "video", "label": "Video" },
                    { "value": "image_slider", "label": "Image Slider" }
                ],

<div class="banner-hero">
{% if section.settings.type_hero == "video" %}
        <div class="video-hero">
            {% for block in section.blocks %}
                {% if block.type == "text" and block.settings.video != blank %}
                    <div class="wrapper-video-hero">
                        {% if block.settings.title != blank %}
                        <div class="overlay">
                            <div class="content-text position-{{ block.settings.position }}">
                                <div class="content">
                                    <h2>{{ block.settings.title }}</h2>
                            
                                    {% if block.settings.subtitle != blank %}
                                    <h3>{{ block.settings.subtitle }}</h3>
                                    {% endif %}

                                    {% if block.settings.linkcta != blank and block.settings.linktext != blank %}
                                    <a class="button" href="{{ block.settings.linkcta }}">{{ block.settings.linktext }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endif %}

                        <div class="bg-video">
                            <video autoplay muted loop>
                                <source src="{{ block.settings.video }}" type="video/mp4">
                            </video>
                        </div>
                        
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% else if section.settings.type_hero == "image_slider" %}
        <div class="hero-slider">
            {% for block in section.blocks %}
                {% if block.type == "image_picker" %}
                <div class="slide-item">
                    {% if block.settings.title != blank %}
                        <div class="home-hero-text">
                            <div class="overlay">
                                <div class="content-text position-{{ block.settings.position }}">
                                    <div class="content">
                                        <h2>{{ block.settings.title }}</h2>
                                
                                        {% if block.settings.subtitle != blank %}
                                        <h3>{{ block.settings.subtitle }}</h3>
                                        {% endif %}
    
                                        {% if block.settings.linkcta != blank and block.settings.linktext != blank %}
                                        <a class="button" href="{{ block.settings.linkcta }}">{{ block.settings.linktext }}</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    
                    <div class="thumb-slide">
                        {% if block.settings.image_desktop != blank %}
                            <img class="image-desktop" alt="{{ block.settings.image_desktop | strip_html | escape }}" src="{{ block.settings.image_desktop | img_url: '1440x' }}">
                            <img class="image-mobile" alt="{{ block.settings.image_mobile | strip_html | escape }}" src="{{ block.settings.image_mobile | img_url: '720x' }}">
                        {% else %}
                            <img class="home-helper-image" alt="Demo image" src="{{ 'no-image.svg' | asset_url }}">
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
</div>

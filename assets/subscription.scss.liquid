
.subscription-page-title {
    font-size: 3rem;
    font-weight: bold;
}
.subscription-page-desc {
    margin-bottom: 4rem;
    text-align: center;
}

.subscription-set {

    @media(min-width: 800px) {
        display:flex;
        width: 130%;
        margin-left: -15%;
        flex-wrap: wrap;
    }

}

    .subscription-set-title {
        font-weight: 800;
        font-size: 1.8rem;
        text-align: center;
        //text-transform: uppercase;
        margin-bottom: 3rem;
    }


.subscription-group {
    margin-bottom: 4rem;

    @media(min-width: 800px) {
        width: 50%;
        padding: 0 5%;
    }
    &.individuals{

    @media(min-width: 800px) {
            width: 25%;
            padding: 0 2%;
        }

    }
}

    .subscription-group-row {
        border-bottom: #000 1px solid;
        display: flex;
        line-height: 3rem;
        padding: 0 .5rem;
    }

    .subscription-group-img {
        padding: 0;
        padding-bottom:75%;
        height:0;
        position:relative;
        img {
            width:100%;
            height:100%;
            display:block;
            position:absolute;
        }
    }

    .subscription-group-name {
        
    }


    .subscription-group-swatches {
        &.no-swatches {
            display: none;
        }

        & > div {
            width: 50%;
        }
    }

    .subscription-group-swatches-items {
        text-align: right;
        display: flex;
        align-items: center;
        justify-content: flex-end;


    }


    .subscription-group-swatch {

        $swatch-diameter: 2rem;
        display: inline-block;
        width: $swatch-diameter;
        height: $swatch-diameter;
        border-radius: $swatch-diameter/2;
        border: 2px #fff solid;
        opacity: .9;
        transition: opacity .2s ease-in;
        margin-left: .4rem;
        background: rgba(0, 0, 0, 0.05);
        will-change: opacity, border-color;

        



        &.natural {
            background-color: #DCC778;
        }
        &.blue, &.navy-blue{
            background-color: #069AF3;
        }
        &.pink {
            background-color: #EB4196;
        }
        &.grey {
            background-color: #666;
        }

        &.grin-mint, &.mint-green {
            background-color: #68CCCF;
        }

        &.orange {
            background-color: #FA8E40;
        }

        &.natural-bamboo {
            background-color: #efebd6;
        }

        &.white, &.ivory-desert {
            background-color: #eee;
        }

        &.selected {
            border-color: #666;

            &:hover {
                border-color: #333;
            }
        }
        &:hover {
            opacity: 1;
            border-color: transparent;
        }

        &.out-of-stock {
            opacity: .5; 
            &:hover{
                opacity: .5; 
            }
        }
    }

    .subscription-group-plans {
        min-height: 3rem;
    }

    .subscription-group-plan {
        width: 50%;
        color: #999;
        border-right: #000 1px solid;
        margin-right: .8rem;
        padding-right: .8rem;
        text-align: center;
        line-height:1.5rem;
        padding-top:0.4rem;
        &.selected {
            color: inherit;
        }

        &:last-child {
            margin-right: 0;
            padding-right: 0;
            border-width: 0;
            // text-align: right;
        }
        @media(min-width: 447px){
            line-height:3.0rem;
            padding-top:0;
        }
    }

    .subscription-group-summary {
        & > span {
            margin-left: .5rem;
            margin-right: .5rem;
            color: #999;
        }
    }


    .subscription-group-total {
        
    }

    .subscription-group-total-value {
        font-weight: 600;
    }

    .subscription-group-frequency {
        color: #999;
        font-size:12px;
    }

    .subscription-group-actions {
        text-align:center;
        position:relative;

        
    }

           
    .unavailable-notice {
        border: none;
        text-align: center;
        display: block;
        color: #999;
    }
 

    .button-addto {
        $button-bg: #EB4196;
        $button-height: 3.5rem;

        line-height: $button-height;
        height: $button-height;
        margin-top: 1rem;
        vertical-align: middle;
        font-weight: 200;
        background-color: $button-bg;
        position:relative;

        @media (max-width: 800px) {
            width: 100%;
        }

        &:focus {
            outline: none;
        }

        .add-to-cart-loader {
            display:none;
            left: calc(50% - 15px);
            border-left: 3px solid rgba(255, 255, 255, .15);
            border-right: 3px solid rgba(255, 255, 255, .15);
            border-bottom: 3px solid rgba(255, 255, 255, .15);
            border-top: 3px solid rgba(255, 255, 255, .8);
       }

       .add-to-cart-added {
            display:none;
       }

       &.is-loading {
            span {
                visibility: hidden;
            }
            .add-to-cart-loader {
                visibility: visible;
                display:block;
            }

       }

       &.is-success {
           span {
               display: none;
           }
           .add-to-cart-added {
               visibility: visible;
               display:block;
           }
           .icon-tick{
               visibility: visible;
               display: inline-block;
           }

           background-color:#68CCCF;

        }

        &:hover {
            background-color: darken($button-bg, 10%);
        }

        span {
            display: inline-block;
            vertical-align: middle;
        }

        .icon-plus {
            margin-right: 0.4rem;
            font-size: 3rem;
        }

        .icon-tick{
            margin-right: 0.4rem;
            width: 30px;
            fill: #fff;
            line-height: 1rem;
        }

    }
.subscription-banner {
    background: #68CCCF;
    width: 200vw;
    height: 36px;
    transform: translateX(-20%);
    position:fixed;
    z-index:1000;
    left:0px;
    bottom:0px;

}


  padding: 0 $gutter;
  font-size: 16px;
  border-radius: 5px;
  height: 50px;
  line-height: 50px;
  display: inline-block;
  cursor: pointer;
  border: none;

  &:hover {
    background: $accentColorHover;
    color: $primaryButtonColor;
  }

  font-size:      #{' {% if settings.primary-button-font-small-caps %} '}14px #{' {% endif %} '};

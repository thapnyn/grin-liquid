  text-transform: #{' {% if settings.primary-button-font-small-caps %} '}uppercase #{' {% endif %} '};

  &.secondary {
    background: $secondaryButtonBackground;
    color: $secondaryButtonColor;

    &:hover {
      background: $secondaryButtonBackgroundHover;
      color: $secondaryButtonColor;
    }
  }

  &.disabled {
    background: $disabledButtonBackground;
    color: $disabledButtonColor;

<h1 class="{% if current_tags %}tag-page{% endif %} {% if settings.blog-show-rss-icon %}has-rss-icon{% endif %} page-title">
  {% if current_tags %}<a href="{{ blog.url }}">{% endif %}
    {{ blog.title }}
  {% if current_tags %}</a>{% endif %}

  {% if settings.blog-show-rss-icon %}<a class="icon rss" href="{{ blog.url }}.atom">&#57366;</a>{% endif %}
</h1>

{% if current_tags %}
  <p class="current-tag">{{ 'blogs.blog.posts_tagged' | t }} <em>"{{ current_tags.first }}"</em></p>
{% endif %}

{% paginate blog.articles by settings.articles-per-page %}

  <div class="blog-posts">
    {% for article in blog.articles %}
      {% include 'article-list-item' %}
    {% else %}
      <span class="empty">{{ 'blogs.blog.empty' | t }}</span>
    {% endfor %}
  </div>

  {% if paginate.previous or paginate.next %}
    {% include 'pagination' %}
  {% endif %}

{% endpaginate %}

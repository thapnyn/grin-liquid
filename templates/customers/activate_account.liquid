<h1 class="page-title">{{ 'customer.activate_account.header' | t }}</h1>

{% form 'activate_customer_password' %}

  <p>{{ 'customer.activate_account.subtext' | t }}</p>

  {% if form.errors %}
    <div class="error-message">{{ form.errors | default_errors }}</div>
  {% endif %}

  <div class="input-wrapper">
    <label>{{ 'general.password' | t }}</label>
    <input type="password" name="customer[password]" />
  </div>

  <div class="input-wrapper">
    <label>{{ 'customer.general.password_confirmation' | t }}</label>
    <input type="password" name="customer[password_confirmation]" />
  </div>

  <div class="input-wrapper">
    <input type="submit" value="{{ 'general.submit' | t }}">
    <a class="decline-activation" href="/"><span>{{ 'customer.general.or' | t }} </span>{{ 'customer.activate_account.decline' | t }}</a>
  </div>

{% endform %}